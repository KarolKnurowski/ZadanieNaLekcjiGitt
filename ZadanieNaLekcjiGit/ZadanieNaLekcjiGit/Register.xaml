<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZadanieNaLekcjiGit.Register">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login:" TextColor="White" FontSize="Large" HorizontalTextAlignment="Center"/>
            <Entry x:Name="loginEntry" TextColor="White"/>
            <Label Text="Hasło:" TextColor="White" FontSize="Large" HorizontalTextAlignment="Center"/>
            <Entry x:Name="HasloEntry" TextColor="White" IsPassword="True"/>
            <Label Text="Powtórz hasło:" TextColor="White" FontSize="Large" HorizontalTextAlignment="Center"/>
            <Entry x:Name="HasloPEntry" TextColor="White" IsPassword="True"/>
            <Button Text="Zarejestruj się" x:Name="LoginButton" BackgroundColor="CadetBlue" Clicked="Zarejestruj"/>
            <Button Text="Zaloguj się" BackgroundColor="CadetBlue" Clicked="Zaloguj_Click"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>