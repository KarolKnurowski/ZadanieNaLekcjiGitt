<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZadanieNaLekcjiGit.Register">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login:"  FontSize="Large" HorizontalTextAlignment="Center"/>
            <Entry x:Name="loginEntry" />
            <Label Text="Hasło:"  FontSize="Large" HorizontalTextAlignment="Center"/>
            <Entry x:Name="HasloEntry"  IsPassword="True"/>
            <Label Text="Powtórz hasło:" FontSize="Large" HorizontalTextAlignment="Center"/>
            <Entry x:Name="HasloPEntry"  IsPassword="True"/>
            <Button Text="Zarejestruj się" x:Name="LoginButton" BackgroundColor="CadetBlue" Clicked="Zarejestruj"/>
            <Button Text="Zaloguj się" BackgroundColor="CadetBlue" Clicked="Zaloguj_Click"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>